{
  "rules": [
    {
      "name": "Mark Important Emails from Boss",
      "description": "Automatically mark emails from boss as read and move to Important folder",
      "logic": "all",
      "conditions": [
        {
          "field": "from",
          "predicate": "contains",
          "value": "boss@company.com"
        },
        {
          "field": "subject",
          "predicate": "contains",
          "value": "urgent"
        }
      ],
      "actions": [
        {
          "type": "mark_as_read"
        },
        {
          "type": "move_message",
          "destination": "IMPORTANT"
        }
      ]
    },
    {
      "name": "Archive Old Newsletters",
      "description": "Archive newsletter emails older than 30 days",
      "logic": "any",
      "conditions": [
        {
          "field": "from",
          "predicate": "contains",
          "value": "newsletter"
        },
        {
          "field": "from",
          "predicate": "contains",
          "value": "noreply"
        },
        {
          "field": "received_date",
          "predicate": "less_than",
          "value": "30",
          "unit": "days"
        }
      ],
      "actions": [
        {
          "type": "mark_as_read"
        },
        {
          "type": "move_message",
          "destination": "TRASH"
        }
      ]
    },
    {
      "name": "Priority Client Emails",
      "description": "Mark emails from priority clients as unread and add label",
      "logic": "any",
      "conditions": [
        {
          "field": "from",
          "predicate": "contains",
          "value": "client1@priority.com"
        },
        {
          "field": "from",
          "predicate": "contains",
          "value": "client2@priority.com"
        }
      ],
      "actions": [
        {
          "type": "mark_as_unread"
        },
        {
          "type": "add_label",
          "label": "Priority Clients"
        }
      ]
    }
  ]
}
